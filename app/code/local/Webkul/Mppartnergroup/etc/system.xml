<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <marketplace>
            <groups>
                <mppartnergroup>
                    <label>Marketplace Partner Group Options</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>1</sort_order>
                    <fields>
                        <defaultproductallowed translate="label">
                            <label>Number Of products</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-zero-or-greater</validate>
                            <comment>Default Partners Allowed Number Of products</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </defaultproductallowed>
                        <paypalid translate="label">
                            <label>Admin Paypal Account</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry email-validate</validate>
                            <comment>Paypal Id of admin for take fee payment</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </paypalid>
                        <sandbox translate="label">
                            <label>Enter Sandbox Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set Yes No</comment>
                        </sandbox>
						<checktype translate="label">
                            <label>Check On</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mppartnergroup/checktype</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set Check On Value</comment>
                        </checktype>
						<feefront translate="label">
                            <label>Enable Payment From Front</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set Yes No</comment>
                        </feefront>
                    </fields>
                </mppartnergroup>
            </groups>
        </marketplace>
    </sections>
</config>